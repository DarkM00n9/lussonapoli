<header id="header"> 
  <div class="logo">
    <a href="{{ shop.url }}">
      {% if section.settings.logo %}
        <img src="{{ section.settings.logo | image_url: width: 150 }}" alt="{{ shop.name }}" />
      {% else %}
        <span>No logo available</span>
      {% endif %}
    </a>
  </div>
  <nav>
    <ul>
      {% for link in linklists.main-menu.links %}
        <li><a href="{{ link.url }}">{{ link.title }}</a></li>
      {% endfor %}
    </ul>
  </nav>
</header>


{%- schema -%}
{
"name": "Header",
"settings": [
  {
  "type": "image_picker",
  "id": "logo",
  "label": "Logo"
  }
]
}
{%- endschema -%}

